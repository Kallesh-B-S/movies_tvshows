generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

  // postgresql://<username>:<password>@<host>:<port>/<database>
  url = env("PG_DB_URL")
}

enum Digital_EntertainmentContentType {
  movie
  tv_show
}

model Digital_Entertainment {
  id       Int                              @id @default(autoincrement())
  title    String                           @unique
  type     Digital_EntertainmentContentType
  director String
  budget   Decimal                          @db.Decimal(15, 2)
  location String
  duration String
  year     Int
}
